{
  "name": "@restorio/tablet-app",
  "version": "1.0.0",
  "type": "module",
  "private": true,
  "scripts": {
    "dev": "vite --port 3003",
    "build": "tsc && vite build",
    "clean": "rm -rf dist && rm -rf node_modules",
    "preview": "vite preview",
    "test": "vitest run",
    "test:unit": "vitest run",
    "format": "prettier --write \"**/*.{ts,tsx,js,jsx,json,md}\" && eslint . --fix",
    "check": "prettier --check \"**/*.{ts,tsx,json,md}\" && eslint . --ext ts,tsx"
  },
  "dependencies": {
    "@types/node": "^22",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "react-router-dom": "^6.21.1",
    "@restorio/types": "file:../../packages/types",
    "@restorio/api-client": "file:../../packages/api-client",
    "@restorio/auth": "file:../../packages/auth",
    "@restorio/ui": "file:../../packages/ui"
  },
  "devDependencies": {
    "@types/react": "^18.2.45",
    "@types/react-dom": "^18.2.18",
    "@vitejs/plugin-react": "^4.2.1",
    "typescript": "^5.9",
    "vite": "^5.4.0",
    "eslint": "^8.56.0",
    "vitest": "^4.0.16",
    "@testing-library/react": "^14.1.2",
    "@testing-library/jest-dom": "^6.1.5",
    "jsdom": "^23.0.1",
    "tailwindcss": "^3.4.1",
    "postcss": "^8.4.35",
    "autoprefixer": "^10.4.17"
