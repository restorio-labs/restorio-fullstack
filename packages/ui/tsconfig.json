{
  "extends": "../../tsconfig.base.json",
  "compilerOptions": {
    "lib": ["ES2020", "DOM", "DOM.Iterable"],
    "jsx": "react-jsx",

    "rootDir": "src",
    "outDir": "dist",

    "declaration": true,
    "declarationMap": true,

    "noEmit": false,

    "baseUrl": ".",
    "paths": {
      "@components/*": ["./src/components/*"],
      "@utils": ["./src/utils/*", "./src/utils/index.ts"]
    }
  },
  "include": ["src"],
  "exclude": ["tests", "tailwind.config.ts", "postcss.config.js"]
}
