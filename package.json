{
  "name": "restorio-platform",
  "version": "0.1.0",
  "private": true,
  "workspaces": [
    "app/apps/*",
    "app/packages/*"
  ],
  "scripts": {
    "dev": "turbo run dev",
    "build": "turbo run build",
    "test:unit": "vitest run",
    "test:e2e": "playwright test",
    "test:e2e:ui": "playwright test --ui",
    "clean": "turbo run clean",
    "check": "prettier --check \"**/*.{ts,tsx,json,md}\" && eslint . --ext ts,tsx",
    "format": "prettier --write \"**/*.{ts,tsx,js,jsx,json,md}\" && eslint . --fix",
    "coverage:report": "bun run scripts/coverage-report.ts",
    "check:root": "prettier --check \"**/*.{ts,tsx,json,md}\" && eslint . --ext ts,tsx",
    "sync:eslintignore": "for d in app/apps/* app/packages/*; do [ \"$d\" = \"app/apps/api\" ] && continue; cp .eslintignore \"$d/.eslintignore\"; done",
    "sync:prettierignore": "for d in app/apps/* app/packages/*; do [ \"$d\" = \"app/apps/api\" ] && continue; cp .prettierignore \"$d/.prettierignore\"; done",
    "prepare": "husky"
  },
  "devDependencies": {
    "@playwright/test": "^1.41.0",
    "@testing-library/jest-dom": "^6.1.5",
    "@types/bun": "^1.3.5",
    "@typescript-eslint/eslint-plugin": "^6.19.0",
    "@typescript-eslint/parser": "^6.19.0",
    "@vitest/coverage-v8": "^4.0.16",
    "@vitest/ui": "^4.0.16",
    "clsx": "^2.1.1",
    "concurrently": "^9.1.2",
    "eslint": "^8.56.0",
    "eslint-config-prettier": "^10.1.8",
    "eslint-import-resolver-typescript": "^3.6.1",
    "eslint-plugin-import": "^2.29.1",
    "eslint-plugin-prettier": "^5.5.4",
    "eslint-plugin-react": "^7.33.2",
    "eslint-plugin-react-hooks": "^4.6.0",
    "eslint-plugin-unused-imports": "^3.0.0",
    "husky": "^9.1.7",
    "lint-staged": "^16.2.7",
    "prettier": "^3.1.1",
    "tailwind-merge": "^3.4.0",
    "turbo": "^2.7.4",
    "typescript": "^5.9",
    "vitest": "^4.0.16"
  },
  "engines": {
    "bun": ">=1.3.5"
  },
  "packageManager": "bun@1.3.5",
  "dependencies": {
    "typescript-eslint": "^8.51.0",
    "typescript-parser": "^2.6.1"
  }
}
