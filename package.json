{
  "name": "restorio-platform",
  "version": "0.1.0",
  "private": true,
  "workspaces": [
    "apps/*",
    "packages/*"
  ],
  "scripts": {
    "dev": "turbo run dev",
    "build": "turbo run build",
    "test": "turbo run test",
    "test:unit": "turbo run test:unit",
    "test:e2e": "playwright test",
    "test:e2e:ui": "playwright test --ui",
    "clean": "turbo run clean",
    "coverage:report": "bun run scripts/coverage-report.ts",
    "format:packages": "turbo run check",
    "format:apps": "turbo run format:apps",
    "format:package:api-client": "eslint packages/api-client --fix",
    "format:package:auth": "eslint packages/auth --fix",
    "format:package:types": "eslint packages/types --fix",
    "format:package:ui": "eslint packages/ui --fix",
    "format:app:admin-panel": "eslint apps/admin-panel --fix",
    "format:app:kitchen-panel": "eslint apps/kitchen-panel --fix",
    "format:app:public-web": "eslint apps/public-web --fix",
    "format:app:tablet-app": "eslint apps/tablet-app --fix",
    "check:package:api-client": "eslint packages/api-client",
    "check:package:auth": "eslint packages/auth",
    "check:package:types": "eslint packages/types",
    "check:package:ui": "eslint packages/ui",
    "check:app:admin-panel": "eslint apps/admin-panel",
    "check:app:kitchen-panel": "eslint apps/kitchen-panel",
    "check:app:public-web": "eslint apps/public-web",
    "check:app:tablet-app": "eslint apps/tablet-app",
    "format": "prettier --write \"**/*.{ts,tsx,js,jsx,json,md}\" && eslint . --fix",
    "check": "prettier --check \"**/*.{ts,tsx,json,md}\" && eslint . --ext ts,tsx",
    "sync:eslintignore": "for d in apps/* packages/*; do [ \"$d\" = \"apps/api\" ] && continue; cp .eslintignore \"$d/.eslintignore\"; done",
    "sync:prettierignore": "for d in apps/* packages/*; do [ \"$d\" = \"apps/api\" ] && continue; cp .prettierignore \"$d/.prettierignore\"; done"
  },
  "devDependencies": {
    "@playwright/test": "^1.41.0",
    "@types/bun": "^1.3.5",
    "@typescript-eslint/eslint-plugin": "^6.19.0",
    "@typescript-eslint/parser": "^6.19.0",
    "@vitest/ui": "^1.2.0",
    "eslint": "^8.56.0",
    "eslint-config-prettier": "^10.1.8",
    "eslint-import-resolver-typescript": "^3.6.1",
    "eslint-plugin-import": "^2.29.1",
    "eslint-plugin-prettier": "^5.5.4",
    "eslint-plugin-react": "^7.33.2",
    "eslint-plugin-react-hooks": "^4.6.0",
    "eslint-plugin-unused-imports": "^3.0.0",
    "prettier": "^3.1.1",
    "turbo": "^2.7.2",
    "typescript": "^5.9",
    "vitest": "^1.2.0"
  },
  "engines": {
    "bun": ">=1.3.5"
  },
  "packageManager": "bun@1.3.5",
  "dependencies": {
    "typescript-eslint": "^8.51.0",
    "typescript-parser": "^2.6.1"
  }
}
