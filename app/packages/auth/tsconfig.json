{
  "extends": "../../../tsconfig.base.json",
  "compilerOptions": {
    "lib": ["ES2020", "DOM"],

    "rootDir": "src",
    "outDir": "dist",

    "module": "ESNext",
    "moduleResolution": "bundler",

    "declaration": true,
    "declarationMap": true,
    "composite": true,
    "emitDeclarationOnly": true,
    "stripInternal": true,
    "strict": true
  },
  "include": ["src/**/*.ts"],
  "exclude": ["node_modules", "dist"],
  "references": [
    { "path": "../types" }
  ]
}
