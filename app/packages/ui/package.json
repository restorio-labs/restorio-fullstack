{
  "name": "@restorio/ui",
  "version": "1.0.0",
  "type": "module",
  "private": true,
  "main": "./src/index.ts",
  "module": "./src/index.ts",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./src/index.ts",
      "require": "./src/index.ts"
    },
    "./styles": "./src/styles/tailwind.css",
    "./styles/tailwind.css": "./src/styles/tailwind.css",
    "./tailwind": {
      "types": "./dist/theme/tailwindUtils.d.ts",
      "import": "./dist/theme/tailwindUtils.js",
      "require": "./dist/theme/tailwindUtils.cjs"
    }
  },
  "scripts": {
    "build": "tsup",
    "clean": "rm -rf dist",
    "test": "vitest run",
    "test:unit": "vitest run --coverage",
    "test:watch": "vitest",
    "format": "prettier --write \"**/*.{ts,tsx,js,jsx,json,md}\" && eslint . --fix",
    "check": "prettier --check \"**/*.{ts,tsx,json,md}\" && eslint . --ext ts,tsx"
  },
  "peerDependencies": {
    "react": "^18.2.0",
    "react-dom": "^18.2.0"
  },
  "dependencies": {
    "@types/node": "^22",
    "@restorio/types": "workspace:*",
    "@testing-library/user-event": "^14.6.1"
  },
  "devDependencies": {
    "@testing-library/jest-dom": "^6.1.5",
    "@testing-library/react": "^14.1.2",
    "@types/jsdom": "^27.0.0",
    "@types/react": "^18.2.45",
    "@types/react-dom": "^18.2.18",
    "@vitest/coverage-v8": "^4.0.16",
    "@vitest/ui": "^4.0.16",
    "autoprefixer": "^10.4.17",
    "clsx": "^2.1.1",
    "jsdom": "^27.4.0",
    "postcss": "^8.4.35",
    "tailwind-merge": "^3.4.0",
    "tailwindcss": "^3.4.1",
    "tsup": "^8.5.1",
    "typescript": "^5.9.0",
    "vite": "^5.4.0",
    "vitest": "^4.0.16"
  }
}
