  },
  "dependencies": {
    "@restorio/api-client": "workspace:*",
    "@restorio/auth": "workspace:*",
    "@restorio/types": "workspace:*",
    "@restorio/ui": "workspace:*",
    "next": "^16.1.1",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "react-icons": "^5.5.0"
  },
  "devDependencies": {
    "@types/node": "^20.10.6",
    "@types/react": "^18.2.45",
    "@types/react-dom": "^18.2.18",
    "@vitejs/plugin-react": "^4.2.1",
    "autoprefixer": "^10.4.17",
    "postcss": "^8.4.35",
    "tailwindcss": "^3.4.1",
    "typescript": "^5.9",
    "eslint": "^8.56.0",
    "eslint-config-next": "^14.0.4",
    "vitest": "^4.0.16",
    "@testing-library/react": "^14.1.2",
